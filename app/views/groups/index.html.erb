<% if @groups.any? %>
<div class="header-bg">
  <p class="total-info">
    Total transactions: <%= @total_entities_count %>, Total Amount: <%= @total_entities_sum %> NGN
  </p>
</div>
  <ul class="groups-list">
    <% @groups.each do |group| %>
      <li class="group-item">
        <section class="group-section">
          <% if group.icon.attached? %>
            <%= image_tag group.icon, class: "group-icon" %>
          <% else %>
            <%= image_tag 'default.png', class: "group-icon" %>
          <% end %>
          <div class="group-details">
            <%= link_to group.name, group_path(group), class: "group-name" %>
            <p class="group-info">
              (Entities: <%= group.entities.count %>, Total Amount: <%= group.entities.sum(:amount) %>)
            </p>
          </div>
        </section>
        <p class="group-created-at">
          Created on: <%= group.created_at.strftime('%Y-%m-%d %H:%M:%S') %>
        </p>
      </li>
    <% end %>
  </ul>
<% else %>
  <p class="no-groups-message">No groups found for the current user.</p>
<% end %>

<%= link_to 'New Group', new_group_path, class: "new-group-link" %>
