<!-- app/views/users/edit.html.erb -->
<h1>Edit Profile</h1>

<%= form_for @user do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>


  <div class="actions">
    <%= f.submit 'Update Profile', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back to profile', user_path(@user), class: 'btn btn-secondary' %>
